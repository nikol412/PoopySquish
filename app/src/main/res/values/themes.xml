<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PoopySquish" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/graphite_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/graphite_dark</item>
        <item name="colorSecondaryVariant">@color/gray_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSurface">@color/white</item>
        <item name="android:windowBackground">@color/gray_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>



    <style name="Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Title.26">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="Text">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text.16">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Text.12">
        <item name="android:textSize">12sp</item>
    </style>
</resources>